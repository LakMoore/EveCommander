<Window x:Class="Commander.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="600" Width="600"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource ForegroundBrush}">
  <Grid Margin="10">
    <DockPanel LastChildFill="True">
      <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right">
        <Button x:Name="OkButton" Padding="8" Margin="5" Width="75" Click="OkButton_Click">OK</Button>
        <Button x:Name="CancelButton" Padding="8" Margin="5" Width="75" Click="CancelButton_Click">Cancel</Button>
      </StackPanel>

      <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="PluginsStack" />
      </ScrollViewer>
    </DockPanel>
  </Grid>
</Window>
