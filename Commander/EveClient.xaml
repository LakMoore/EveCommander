<UserControl x:Class="Commander.EveClient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Commander"
             mc:Ignorable="d" 
             d:DesignHeight="54.507" d:DesignWidth="800"
             MouseEnter="UserControl_MouseEnter" MouseLeave="UserControl_MouseLeave" MouseLeftButtonDown="UserControl_MouseLeftButtonDown" MouseLeftButtonUp="UserControl_MouseLeftButtonUp">
  <Grid x:Name="BaseGrid" Background="{StaticResource BackgroundBrush}">
    <Grid.ColumnDefinitions>
      <ColumnDefinition />
      <ColumnDefinition Width="Auto"/>
    </Grid.ColumnDefinitions>

    <!-- Alert overlay layer - sits between background and content -->
    <Border x:Name="AlertOverlay" 
            Background="Transparent"
            Opacity="0"
            Grid.ColumnSpan="2" />

    <StackPanel Orientation="Horizontal" Margin="10,10,10,10" Grid.Column="0">
      <Label x:Name="Alive" Content="-" Width="20" HorizontalAlignment="Center" VerticalAlignment="Center" />
      <Label x:Name="Character" Content="Name" Width="150" VerticalAlignment="Center" />
      <StackPanel x:Name="DetailsPanel" Orientation="Horizontal" Visibility="Visible">
        <Label x:Name="SolarSystem" Content="System" VerticalAlignment="Center"/>
        <Label x:Name="Result" Content="" Width="0" VerticalAlignment="Center"/>
        <Label x:Name="PluginDescription" Content="No plugins loaded" VerticalAlignment="Center"/>
      </StackPanel>
      <StackPanel x:Name="MemoryScanPanel" Orientation="Horizontal" Width="0" >
        <Label Content="Scanning Eve Client Memory (slow process!):  " VerticalAlignment="Center"/>
        <ProgressBar Height="10" Width="128" IsIndeterminate="True" VerticalAlignment="Center"/>
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
