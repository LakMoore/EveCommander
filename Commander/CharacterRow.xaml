<UserControl x:Class="Commander.CharacterRow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Commander"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <Grid>
    <StackPanel 
      Orientation="Horizontal" 
      VerticalAlignment="Center" 
      MouseDown="StackPanel_Click"
      Background="{Binding BackgroundColor}"
    >
      <!-- Selection checkbox bound to the data's IsSelected -->
      <CheckBox Margin="6,0,6,0"
            VerticalAlignment="Center"
            Focusable="False"
            Click="IsSelectedCheckBox_Click"
            IsChecked="{Binding Path=IsSelected, Mode=TwoWay}" 
            Name="Selected"
            />

      <!-- Online/Offline checkbox bound to the character's IsOnline property -->
      <CheckBox Margin="6,0,6,0"
            VerticalAlignment="Center"
            ToolTip="Is online"
            IsChecked="{Binding IsOnline, Mode=OneWay}"
            IsEnabled="False"
            Focusable="False"
            />

      <TextBlock Margin="10,0,0,0" Width="180" Text="{Binding Name}" VerticalAlignment="Center" />
      <TextBlock Margin="10,0,0,0" Width="80" Text="{Binding IsAlphaClone}" VerticalAlignment="Center" />
      <TextBlock Margin="10,0,0,0" Width="100" Text="{Binding Location}" VerticalAlignment="Center" />
      <TextBlock Width="180" Text="{Binding EnabledPluginDescription}" VerticalAlignment="Center" />
      <Button x:Name="PluginButton" Margin="10" Padding="5" Click="PluginButton_Click">Select Plugins</Button>
    </StackPanel>
  </Grid>
</UserControl>
