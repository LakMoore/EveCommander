<Window x:Class="Commander.CharacterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Commander"
        mc:Ignorable="d"
        Title="CharacterWindow" Height="450" Width="733">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="*" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <!-- Sorting and filtering controls -->
    <StackPanel Orientation="Horizontal" Margin="8" Grid.Row="0" VerticalAlignment="Center">
      <TextBlock Margin="4,4" VerticalAlignment="Center">Sort:</TextBlock>
      <Button Margin="4,4" Padding="4" Click="SortByIsOnline_Click">IsOnline</Button>
      <Button Margin="4,4" Padding="4" Click="SortByLocation_Click">Location</Button>
      <Button Margin="4,4" Padding="4" Click="SortByName_Click">Name</Button>
      <Button Margin="4,4" Padding="4" Click="SortByPlugins_Click">Plugins</Button>

      <TextBlock Margin="16,4,4,4" VerticalAlignment="Center">Filter IsOnline:</TextBlock>
      <ComboBox x:Name="IsOnlineFilterCombo" Width="100" Margin="4" SelectionChanged="IsOnlineFilter_SelectionChanged">
        <ComboBoxItem Content="All" IsSelected="True" />
        <ComboBoxItem Content="Online" />
        <ComboBoxItem Content="Offline" />
      </ComboBox>

      <TextBlock Margin="16,4,4,4" VerticalAlignment="Center">Filter Location:</TextBlock>
      <ComboBox x:Name="LocationFilterCombo" Width="160" Margin="4" SelectionChanged="LocationFilter_SelectionChanged" />
    </StackPanel>

    <ScrollViewer 
      Grid.Row="1"
      VerticalScrollBarVisibility="Auto" 
      HorizontalScrollBarVisibility="Disabled" 
    >
      <ItemsControl 
        ItemsSource="{Binding CharactersView}"
        x:Name="characterList"
      >
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <local:CharacterRow SelectionChanged="CharacterList_SelectionChanged" />
            <!-- Your custom UserControl -->
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>

    <Grid Grid.Row="2" Margin="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*" />
        <ColumnDefinition Width="Auto" />
      </Grid.ColumnDefinitions>

      <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="0">
        <Button x:Name="SelectAllShownButton" Margin="0,0,10,0" Padding="5" Click="SelectAllShown_Click">Select All Shown</Button>
        <Button x:Name="ClearSelectionButton" Margin="0,0,10,0" Padding="5" Click="ClearSelection_Click">Clear Selection</Button>
      </StackPanel>

      <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
        <Button x:Name="ApplyPluginsButton" Margin="0,0,10,0" Padding="5" Click="ApplyPlugins_Click" IsEnabled="False">Apply Plugins to Selected</Button>
        <Button Margin="0,0,0,0" Padding="5" Click="Button_Click">OK</Button>
      </StackPanel>
    </Grid>
  </Grid>
</Window>
